	<artifactId>igamt-lite-controller</artifactId>
	<name>igamt-lite-controller</name>
	<description>igamt-lite tool</description>
	<packaging>war</packaging>
	<parent>
		<groupId>gov.nist.healthcare.tools.hl7.v2.igamt.lite</groupId>
